<h1>Your Favorites</h1>
<% if @favorites.present? %>
  <table>
    <thead>
      <tr>
        <th>Poster</th>
        <th>Content</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @favorites.each do |favorite| %>
        <tr>
          <td><%= favorite.picture.user.name %></td>
          <td><%= favorite.picture.content %></td>
          <td><%= image_tag favorite.picture.image.url if favorite.picture.image.present? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No pictures in your favorites</p>
<% end %>

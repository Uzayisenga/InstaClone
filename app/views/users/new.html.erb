<h1>Sign up</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br><br>
  <%= f.label :email %><br>
  <%= f.email_field :email %><br><br><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br><br><br>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br><br><br>
  <%= f.label :image %><br>
  <%= image_tag(@user.image.url) if @user.image && @user.image.url %><br><br><br>
  <%= f.file_field :image %><br>
  <%= f.hidden_field :image_cache %><br><br><br>
  <%= f.submit "Create my account" %>
<% end %>

<h1>Your infomation</h1>
<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br><br>
  <%= f.label :email %><br>
  <%= f.email_field :email %><br><br><br>

  <%= f.label :image %><br>
  <%= image_tag @user.image.url if @user.image.present? %><br><br><br>
  <%= f.file_field :image %><br>
  <%= f.hidden_field :image_cache %><br><br><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br><br><br>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br><br><br>
  <div class="submit_record">
    <p><%= f.submit "Edit" %></p>
  </div>
<% end %>
<%= link_to 'Back', :back %>
